.modal-fullscreen.remodal-wrapper
  padding: 0
  overflow: hidden

.modal-fullscreen.remodal
  overflow: hidden
  padding: 0
  margin: 0
  max-width: 100%
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  background-color: RGBA(10,10,10,0.769)

.remodal
  &__feedback
    margin-left: 30px
    margin-right: 30px
    width: 435px
    position: relative

  &__feedback-close
    position: absolute
    top: -32px
    right: -32px
    background-color: $color-black
    width: 40px
    height: 40px
    border-radius: 100%
    cursor: pointer

    &:hover
      background-color: $color-dark

  &__feedback-close-icon
    font-family: "Gotham-Pro-medium"
    font-size: 29px
    line-height: 38px
    text-align: center
    color: $color-white
